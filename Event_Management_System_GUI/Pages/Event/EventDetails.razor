@page "/events/{EventId:int}"
@using Event_Management_System.Models.Base
@using Event_Management_System.Data
@using Microsoft.EntityFrameworkCore
@inject MasDbContext Db
@inject NavigationManager Nav
@inject AuthService Auth
@inject AuthenticationStateProvider AuthProvider


<div class="details-container">

    @if (selectedEvent == null)
    {
        <p class="not-found">Event not found.</p>
    }
    else
    {
        <div class="details-card">

            <img class="event-image" src="https://picsum.photos/400/250?random=EventListId"/>

            <div class="details-content">

                <h1 class="details-title">@selectedEvent.EventTitle</h1>

                <p class="details-date">
                    <i class="fa-solid fa-calendar-day"></i>
                    @selectedEvent.StartDate.ToString("dd MMM yyyy - HH:mm")
                </p>

                <p class="details-location">
                    <i class="fa-solid fa-location-dot"></i>
                    @selectedEvent.Venue?.Location?.City,
                    @selectedEvent.Venue?.Location?.Country
                </p>

                <p class="details-description">@selectedEvent.Description</p>

                <div class="details-categories">
                    @foreach (var cat in selectedEvent.Categories)
                    {
                        <span class="category-chip">@cat.CategoryName</span>
                    }
                </div>

                <p class="details-organizer">
                    <i class="fa-solid fa-user-tie"></i>
                    Hosted by @selectedEvent.Organizer.Username
                </p>

                <p class="details-participants">
                    <i class="fa-solid fa-users"></i>
                    @selectedEvent.Enrollments.Count participant(s)
                </p>

                <div class="details-buttons">

                    @if (IsEnrolled())
                    {
                        <button class="btn btn-leave" @onclick="UnenrollFromEvent">Unenroll</button>
                    }
                    else
                    {
                        <button class="btn btn-join" @onclick="EnrollInEvent">Join Event</button>
                    }

                    <button class="btn btn-secondary" @onclick="ViewParticipants">
                        View Participants
                    </button>

                    <button class="btn btn-secondary" @onclick="ViewDiscussion">
                        Discussion
                    </button>

                    <button class="btn btn-back" @onclick="GoBack">Back</button>

                </div>

            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int EventId { get; set; }

    private Event? selectedEvent;
    private User? currentUser;

    protected override async Task OnParametersSetAsync()
    {

        currentUser = await Auth.GetCurrentUserAsync();

        selectedEvent = await Db.Events
            .Include(e => e.Venue).ThenInclude(v => v.Location)
            .Include(e => e.Organizer)
            .Include(e => e.Categories)
            .Include(e => e.Enrollments).ThenInclude(en => en.User)
            .FirstOrDefaultAsync(e => e.EventId == EventId);
    }

    private bool IsEnrolled()
    {
        return selectedEvent?.Enrollments.Any(e => e.User.UserId == currentUser?.UserId) == true;
    }

    private async Task EnrollInEvent()
    {
        if (selectedEvent == null || currentUser == null || IsEnrolled()) return;


        Db.Enrollments.Add(new Enrollment(currentUser, selectedEvent, DateTime.Now));
        await Db.SaveChangesAsync();

        await RefreshAsync();
    }

    private async Task UnenrollFromEvent()
    {
        if (selectedEvent == null || currentUser == null) return;
        
        var enrollment = await Db.Enrollments
            .FirstOrDefaultAsync(e => e.UserId == currentUser.UserId && e.EventId == selectedEvent.EventId);

        if (enrollment != null)
        {
            Db.Enrollments.Remove(enrollment);
            await Db.SaveChangesAsync();
        }

        await RefreshAsync();
    }

    private async Task RefreshAsync()
    {

        selectedEvent = await Db.Events
            .Include(e => e.Venue).ThenInclude(v => v.Location)
            .Include(e => e.Organizer)
            .Include(e => e.Categories)
            .Include(e => e.Enrollments).ThenInclude(en => en.User)
            .FirstOrDefaultAsync(e => e.EventId == EventId);

        StateHasChanged();
    }

    private void ViewParticipants() => Nav.NavigateTo($"/events/{EventId}/participants");
    private void ViewDiscussion() => Nav.NavigateTo($"/events/{EventId}/discussion");
    private void GoBack() => Nav.NavigateTo("/events");
}
