@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>EvenMap</title>

    <base href="~/" />
    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Event_Management_System_GUI.styles.css" rel="stylesheet" />
</head>

<body>
<div class="layout">

    <!-- SIDEBAR -->
    <div class="sidebar">
        <nav>
            <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" href="/">Home</a>
            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/events") ? "active" : "")" href="/events">Events</a>
            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/my-enrollments") ? "active" : "")" href="/my-enrollments">My Enrollments</a>
            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/messages") ? "active" : "")" href="/messages">Messages</a>
            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/profile") ? "active" : "")" href="/profile">Profile</a>

        </nav>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        <app>
            @RenderBody()
        </app>
    </div>

</div>

<script src="_framework/blazor.server.js"></script>
</body>
</html>
